{% extends "base.jinja2" %}

{% block title %}Items{% endblock title %}

{% block regular_content_top %}<!-- Folder overview -->
<div id="folder-overview" class="row">

    {% for folder in meta_folders.values() %}
    <!-- Single folder -->
    <div class="col-lg-2 col-md-3 mb-3">
        <a class="card bg-hover bg-dark text-white shadow"
           href="{{ url_for('streeplijst.folder', folder_id = folder['id']) }}">
            <div class="card-body text-center p-3">
                <img class="bg-hover-img img-profile rounded-circle" style="height:4rem" src="{{ folder['media'] }}">
                <h4 class="align-middle">{{ folder['name'] }}</h4>
            </div>
        </a>
    </div>
    {% endfor %}

</div> <!-- /#folder-overview -->

{% endblock regular_content_top %}


{% block regular_content %}<!-- Item card holder -->

<div class="container-fluid m-2">
    <div class="card m-2 text-center p-2">


        <div id="item-card-deck" class="row justify-content-center">
            <div class="col-lg-3 col-md-4">
                <div class="card m-2">
                    <!-- Image view -->
                    <img class="card-img-top" src="{{ item.media }}" alt="Card Image" style="object-fit: contain; max-height: 15vh">
                    <!-- TODO: Change the max-height to have a more responsive image -->
                    <div class="card-img-overlay text-center">
                        <h4><span class="badge badge-light opacity-75">{{ item.name|e }}</span></h4>
                    </div>

                    <!-- Price display -->
                    <div class="col-12">
                        <div class="input-group mx-auto my-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">{{ sale.quantity }} x</span>
                            </div>
                            <div class="input-group-prepend">
                                <span class="input-group-text">€{{ "%0.2f"|format(item.price|float / 100) }}</span>
                            </div>
                            <input type="text" class="form-control" disabled>
                            <div class="input-group-append">
                                <span class="input-group-text">Totaal</span>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text">€{{ "%0.2f"|format(sale.total_price|float / 100) }}</span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

{% endblock regular_content %}