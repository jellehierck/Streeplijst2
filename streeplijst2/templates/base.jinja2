<!DOCTYPE html>
<html lang="en">
<!-- This template is created using Jinja tempalates: https://jinja.palletsprojects.com/en/2.11.x/templates/ -->

<head>
    {% block head %}
    <!-- Title block placeholder -->
    <title>{% block title %}BASE{% endblock title %} - Streeplijst </title>

    <!-- Meta data -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="Jelle H">

    <!-- Custom stylesheets -->
    <!-- OLD FILE <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}"> -->
    <link rel="stylesheet" id="custom-css" href="{{ url_for('static', filename='css/custom-style.css') }}"
          type="text/css" media="all">

    <!-- Custom fonts for this template-->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Template scripts -->
    <script type="text/javascript" src="{{ url_for('static', filename='/vendor/jquery/jquery.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ url_for('static', filename='/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

    <!-- Bootstrap stylesheets -->
    <script type="text/javascript"
            src="{{ url_for('static', filename='/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='/js/sb-admin-2.js') }}"></script>

    {% endblock head %}
</head>

<body>

<!-- Main content block wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {% block sidebar %}
    <ul id="accordion-sidebar" class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion toggled">
        <!-- Sidebar - Brand -->
        <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
            <img class="img rounded" src="{{ url_for('static', filename='media/icons/ICON_paradoks.jpg') }}"
                 style="width:60px;">
            <div class="sidebar-brand-text mx-3">Streeplijst <sup>V2.0</sup></div>
        </a>

        <!-- Nav Item - Dashboard -->
        <li class="nav-item active">
            <a class="nav-link" href="/">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Streeplijst</span></a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- Heading -->
        <div class="sidebar-heading">
            Evenementen
        </div>

        <!-- Nav Item - Pages Collapse Menu -->
        <li class="nav-item">
            <a class="nav-link" href="/evenementen">
                <i class="fas fa-fw fa-dice"></i>
                <span class="font-weight-bold">Inschrijven</span>
            </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- Sidebar Toggler (Sidebar) -->
        <div class="text-center d-none d-md-inline">
            <button class="rounded-circle border-0" id="sidebarToggle"></button>
        </div>
    </ul> <!-- #accordion-sidebar -->
    {% endblock sidebar %}

    <!-- Content Wrapper -->
    <div id="regular-content-wrapper" class="container-fluid d-flex flex-column">
        <!-- Actual content -->
        <div id="regular-content" class="container-fluid">
            <!-- Top bar -->
            {% block top_bar %}
            <nav id="top-bar" class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                <!-- Top bar items -->
                <div class="navbar-collapse collapse justify-content-between align-items-center w-100">
                    <!-- Left section -->
                    <div class="navbar-nav">
                        {% block top_bar_left_section %}
                        <!-- Top bar text -->
                        <div class="navbar-brand">
                            {% block top_bar_text %}
                            Streeplijst 2.0
                            {% endblock top_bar_text %}
                        </div>
                        {% endblock top_bar_left_section %}
                    </div>

                    <!-- Middle section is reserved for messages -->
                    <ul class="navbar-nav align-items-center">
                        {% with msgs = get_flashed_messages(category_filter=["message"]) %}
                        {% if msgs %}
                        {%- for msg in msgs %}
                        <li class="nav-item mx-1">
                            <div class="alert alert-dark my-lg-0" role="alert">
                                {{ msg }}
                            </div>
                        </li>
                        {% endfor -%}
                        {% endif %}
                        {% endwith %}
                    </ul>

                    <!-- Right section -->
                    <div class="navbar-nav">
                        {% block top_bar_right_section %}
                        <a class="btn btn-primary" href="{{ url_for('home.logout') }}">Log uit</a>
                        {% endblock top_bar_right_section %}
                    </div>
                </div>
            </nav><!-- /#top-bar -->

            {% endblock top_bar %}

            <!-- Error messages -->
            <!-- These will appear as an alert below the main navigation bar -->
            {% with errors = get_flashed_messages(category_filter=["error"]) %}
            {% if errors %}
            {%- for msg in errors %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <h4><strong>Oh jeetje!</strong> {{ msg }}</h4>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {% endfor -%}
            {% endif %}
            {% endwith %}

            {% block regular_content %}
            <!-- Content in the main section goes here -->
            <h1>This is the base template.</h1>
            {% endblock regular_content %}

            <!-- Footer -->
            <div id="footer" class="footer">
                {% block footer %}
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>&copy; Copyright 2020 by Jelle Hierck and Tom Busink</span>
                        </div>
                    </div>
                </footer>
                {% endblock footer %}
            </div> <!-- #footer -->
        </div> <!-- /#regular-content -->
    </div> <!-- /#regular-content-wrapper -->
</div> <!-- /#wrapper -->

{% block script %} {# Any extra scripts go here #}

<!-- SCRIPT TO OPEN AND CLOSE SIDEBAR -->
<script type="text/javascript">
    // Toggle the side navigation
    $("#sidebarToggle, #sidebarToggleTop").on("click", function(e) {
        $("body").toggleClass("sidebar-toggled");
        $(".sidebar").toggleClass("toggled");
        if ($(".sidebar").hasClass("toggled")) {
            $(".sidebar .collapse").collapse("hide");
        };
    });
</script>
{% endblock script %}

</body>

</html>
